page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background-color: #f5f5f5;
}



.banner-item,.banner-img {
  width: 100%;
  height: 100%;
}

.nav{
  margin: 10rpx auto;
  display: flex;
  width: 720rpx;
  flex-wrap:wrap;
  background-color: #fff;
  border-radius: 15rpx;
 }
 .nav-item{
   margin: 20rpx 35rpx 20rpx;
   width:110rpx;
 }
 .nav-item image{
   width:110rpx;
   height: 110rpx;
   border-radius:50%;
 }
 .nav-item text{
   width:120rpx;
   font-size: 24rpx;
   color:#000;
   display: inline-block;
   text-align: center;
 }
 .ad{
  display: flex;
  width:720rpx;
  margin:20rpx auto;
  flex-wrap:wrap;
  /* padding: 10rpx; */
  justify-content:space-between;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
 }


 .ad view:first-child image{
  width:720rpx;
  height: 160rpx;
}
.ad image{
  width:355rpx;
  height: 160rpx;
}
 

