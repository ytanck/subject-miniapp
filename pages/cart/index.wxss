
.content-wrap{
	box-sizing: border-box;
	padding: 20rpx;
	height: auto;
	min-height: 90vh;
	border-bottom: 1px solid #ccc;
}
.content-item{
	margin-top: 20rpx;
}
.msg-wrap image {
	display: inline-block;
	width: 60rpx;
  height: 60rpx;
}
.msg-wrap text {
	padding: 10rpx 15rpx;
	vertical-align: top;
	display: inline-block;
	max-width: 600rpx;
	margin-left: 20rpx;
	background-color: #eee;
	border-radius: 15rpx;
}



.footer{
	box-sizing: border-box;
	padding: 20rpx;

	width: 100%;
	height: 10vh;
}
.footer input{
	padding: 5rpx 90rpx 5rpx 10rpx;
	/* background: #eee url(http://gyjx-web.oss-cn-beijing.aliyuncs.com/upload/common/202411/icon-send.png) no-repeat 98% 50%/65rpx 60rpx; */
	height: 60rpx;
}