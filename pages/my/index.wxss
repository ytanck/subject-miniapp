.topBG {
  background-color: #1bd0ad;
  height: 250rpx;
  position: relative;
  width: 100%;
}
.topImage {
  width: 100%;
  height: 250rpx;
  position: absolute;
  z-index: 0;
}

.head {
  display: flex;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 6rpx #ffffff solid;
  margin: 0 auto;
  z-index: 3;
  position: relative;
}

.name {
  font-size: 32rpx;
  text-align: center;
  margin-top: 30rpx;
  z-index: 3;
  color: #ffffff;
  position: relative;
}

.cell {
	padding: 0 20rpx;
	height: 86rpx;
	background: #fff;
	position: relative;
	border-bottom: 1px solid rgba(230,230,230,0.6);
}

.cell-left {
	font-size: 30rpx;
	display: flex;
	align-items: center;
	position: absolute;
	left: 20rpx;
	top: 0;
	height: 86rpx;
}

.cell-left image {
	width: 45rpx;
	height: 40rpx;
	margin-right: 23rpx;
}

.cell-right {
	height: 86rpx;
	display: flex;
	align-items: center;
	position: absolute;
	right: 20rpx;
	top: 0;
	font-size: 26rpx;
	color: #8c8c8c;
}

.cell-right image {
	width: 10rpx;
	height: 18rpx;
	margin-left: 5px;
}