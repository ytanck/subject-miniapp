.act-btn {
	padding: 0 30rpx;
	margin-top: 20rpx;
	display: flex;
	justify-content: space-around;
	font-size: 28rpx;
}

.act-btn view {
	width: 160rpx;
	height: 70rpx;
	line-height: 70rpx;
	color: rgb(100, 100, 100);
	border: 1px solid #ccc;
}

.disabled {
	color: #ccc !important;
}