/* pages/subDetail.wxss */
page {
	text-align: center;
	padding-bottom: 20rpx;
}

.title {
	padding: 0 30rpx;
	margin: 30rpx auto;
	font-size: 34rpx;
	font-weight: bold;
	text-align: left;
}

.line {
	position: relative;
	font-size: 24rpx;
	color: #1989fa;
}

.line::before {
	position: absolute;
	left: 30rpx;
	top: 20rpx;
	content: '';
	width: 40%;
	height: 2rpx;
	background-color: #1989fa;
}

.line::after {
	position: absolute;
	right: 30rpx;
	top: 20rpx;
	content: '';
	width: 40%;
	height: 2rpx;
	background-color: #1989fa;
}

.desc {
	padding: 30rpx;
	/* font-size: 30rpx; */
	color: rgb(160, 160, 160);
	text-align: left;
}

