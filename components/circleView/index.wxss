.question-wrap {
	background: #fff;
}

.question {
	margin-left: 40px;
	margin-right: 40px;
	height: 243rpx;
	display: flex;
	justify-content: space-between;
}

.question image {
	width: 105rpx;
	height: 83rpx;
}

.question .left,.question .right {
	height: 100%;
	width: 105rpx;
}

.center {
	display: flex;
	justify-content: center;
	align-items: center;
}

.progress-bg {
	width: 220rpx;
	height: 220rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}

.progress-wrap {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	background: linear-gradient(to bottom right,#1bd0ad,#1bd0ad);
	color: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-content: center;
	text-align: center;
}

.progress-wrap .progress-title {
	font-size: 33rpx;
	margin-top: 5rpx;
}

.progress-wrap text {
	font-size: 22rpx;
	line-height: 40rpx;
}

.progress-bg image {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}

.progress-wrap-blue {
	background: linear-gradient(to bottom right,#59b6fb,#40abfa);
}
.question {
	height: 320rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
	display: flex;
	justify-content: space-between;
}

.question .left,.question .right {
	height: 100%;
	width: 250rpx;
	display: flex;
	flex-direction: column;
}

.question .left>view,.question .right>view {
	flex: 1;
}

.home-icon {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	font-size: 14px;
	position: relative;
}

.home-icon image {
	width: 50rpx;
	height: 50rpx;
}

.home-icon text {
	margin-top: 5px;
}



.cell {
	margin-top: 10rpx;
	padding-right: 20rpx;
	height: 86rpx;
	background: #fff;
	position: relative;
	border-bottom: 1px solid rgba(230,230,230,0.6);
}

.cell-left {
	font-size: 30rpx;
	display: flex;
	align-items: center;
	position: absolute;
	left: 20rpx;
	top: 0;
	height: 86rpx;
}

.cell-left image {
	width: 45rpx;
	height: 40rpx;
	margin-right: 23rpx;
}

.cell-right {
	height: 86rpx;
	display: flex;
	align-items: center;
	position: absolute;
	right: 20rpx;
	top: 0;
	font-size: 26rpx;
	color: #8c8c8c;
}

.cell-right image {
	width: 10rpx;
	height: 18rpx;
	margin-left: 5px;
}
